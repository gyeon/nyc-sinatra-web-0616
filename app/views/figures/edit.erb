<form method="post" action="/figures/<%=@figure.id%>">
<input type="hidden" name="_method" value="patch" id="hidden">
<label> Figure: </label>
<input type="text" name="figure[name]"" id="figure_name" value="<%= @figure.name %>">

<p><label> Choose from available Titles </label></p>
<p><% @titles.each do |title|%>
<p><label><%= title.name%></label><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"></p>
<% end %></p>

<p><label> Choose from available Landmarks </label></p>
<p><% @landmarks.each do |landmark|%>
<p><label><%= landmark.name%></label><input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>">
<% end %></p>

<p><label> Or create a new Landmark </label></p>
<p><input type="text" name="landmark[name]" id="new_landmark"></p>

<p><label> Or create a new Title </label></p>
<p><input type="text" name="title[name]" id="new_title"></p>

<input type="submit" value="Edit Figure">

</form>